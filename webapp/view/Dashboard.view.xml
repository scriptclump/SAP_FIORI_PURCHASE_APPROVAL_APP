<mvc:View controllerName="PurchaseOrdersApproval.controller.Dashboard" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:layout="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" height="100%">
	<Page title="{i18n>dashboardPageTitle}" id="__dashboard" backgroundDesign="List">
		<content>
			<List>
				<DisplayListItem label="Approver Name:" value="{/d/results/0/Username}"/>
				<DisplayListItem label="Total Pending Orders:" id="totalPendingOrders" value="" type="Navigation" press="moveToNext" />
				<DisplayListItem label="Updated at:" id="lastSyncDate" value="{
				path: '/d/results/0/UpdatedOn',
				formatter:'.formatDate'
				}"/>
			</List>
			<layout:FixFlex id="chartFixFlex" minFlexSize="250">
				<layout:flexContent>
					<viz:VizFrame id="oVizFrame" busy="false" busyIndicatorDelay="1000" visible="true" uiConfig="{ 'applicationSet': 'fiori' }" vizType="pie"
						legendVisible="true" height="100%" width="100%">
						<viz:dataset>
							<viz.data:FlattenedDataset data="{/d/results}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition name="Category" value="{PurDocType}"/>
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition group="1" name="Total Orders" value="{NoOfDocs}"/>
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<viz.feeds:FeedItem id="value1" uid="size" type="Measure" values="Total Orders"/>
							<viz.feeds:FeedItem uid="color" type="Dimension" values="Category"/>
						</viz:feeds>
					</viz:VizFrame>
				</layout:flexContent>
			</layout:FixFlex>
		</content>
	</Page>
</mvc:View>